@* ============================================
   _Layout.cshtml - Layout tổng + Sidebar + SweetAlert
   ============================================ *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý nhà hàng</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quanlinhahang_Staff.styles.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- SweetAlert2 CSS (optional, theme đẹp) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        body {
            overflow-x: hidden;
            font-family: "Segoe UI", sans-serif;
        }

        #wrapper {
            display: flex;
            width: 100%;
        }

        /* Sidebar trái */
        #sidebar-wrapper {
            min-width: 220px;
            max-width: 220px;
            background-color: #212529;
            color: #fff;
            transition: all 0.3s ease;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: -220px;
        }

        .sidebar-heading {
            background-color: #343a40;
            font-weight: 600;
            text-transform: uppercase;
            text-align: center;
            padding: 1rem 0;
            border-bottom: 1px solid #444;
        }

        .list-group-item {
            border: none;
            background: #212529;
            color: #fff;
            transition: background 0.2s;
        }

            .list-group-item i {
                width: 20px;
                text-align: center;
                margin-right: 6px;
            }

            .list-group-item:hover {
                background-color: #495057;
            }

        /* Nội dung */
        #page-content-wrapper {
            flex-grow: 1;
            margin-left: 220px;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        #wrapper.toggled #page-content-wrapper {
            margin-left: 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar-wrapper { margin-left: -220px; }
            #wrapper.toggled #sidebar-wrapper { margin-left: 0; }
            #page-content-wrapper { margin-left: 0; }
            #wrapper.toggled #page-content-wrapper { margin-left: 220px; }
        }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            border-top: 1px solid #ddd;
            text-align: center;
            padding: 10px;
            margin-top: auto;
        }
    </style>
</head>

<body>

    <div id="wrapper" class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                Quản lý nhà hàng
            </div>

            <div class="list-group list-group-flush">
                <a href="/Invoices" class="list-group-item list-group-item-action">
                    <i class="fas fa-file-invoice"></i> Hóa đơn
                </a>
                <a href="/Reports" class="list-group-item list-group-item-action">
                    <i class="fas fa-chart-line"></i> Báo cáo cá nhân
                </a>
                <a href="/TaiKhoan" class="list-group-item list-group-item-action">
                    <i class="fas fa-user"></i> Tài khoản
                </a>
            </div>
        </div>

        <!-- CONTENT -->
        <div id="page-content-wrapper">

            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
                    <div class="container-fluid">

                        <button class="btn btn-outline-dark me-3" id="sidebarToggle">
                            <i class="fas fa-bars"></i>
                        </button>

                        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Quản lý nhà hàng</a>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        </div>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target=".navbar-collapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        @*
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                                </li>
                            </ul>
                        </div>
                        *@
                    </div>
                </nav>
            </header>

            <!-- MAIN CONTENT -->
            <div class="container-fluid px-4">
                <main role="main" class="pb-3 flex-grow-1">
                    @RenderBody()
                </main>
            </div>
            @*
            <!-- FOOTER -->
            <footer class="border-top text-muted">
                <div class="container">
                    &copy; 2025 - Quản lý nhà hàng -
                    <a asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
                </div>
            </footer>
            *@

        </div>
    </div>


    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const wrapper = document.getElementById("wrapper");
        const toggleBtn = document.getElementById("sidebarToggle");

        toggleBtn.addEventListener("click", () => {
            wrapper.classList.toggle("toggled");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
