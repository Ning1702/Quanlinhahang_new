@model Quanlinhahang_Staff.Models.HoaDon
@{
    var kh = ViewBag.KhachHang as Quanlinhahang_Staff.Models.KhachHang;
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn #@Model.HoaDonID</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 24px;
            font-size: 14px;
        }

        .title {
            font-size: 20px;
            font-weight: 700;
        }
    </style>
</head>
<body onload="window.print()">
    <div class="title mb-1">Nhà hàng Quanlinhahang_Staff</div>
    <div>Mã hóa đơn: <b>#@Model.HoaDonID</b></div>
    <div>Ngày: @Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</div>
    <div>Khách hàng: <b>@kh?.HoTen</b> - @kh?.SoDienThoai</div>
    <hr />
    <table class="table table-sm">
        <thead><tr><th>Món</th><th class="text-end">SL</th><th class="text-end">Đơn giá</th><th class="text-end">Thành tiền</th></tr></thead>
        <tbody>
            @foreach (var i in Model.ChiTietHoaDons)
            {
                <tr>
                    <td>@i.MonAn?.TenMon</td>
                    <td class="text-end">@i.SoLuong</td>
                    <td class="text-end">@i.DonGia.ToString("#,0")</td>
                    <td class="text-end">@i.ThanhTien.ToString("#,0")</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <div>Giảm giá: @Model.GiamGia.ToString("#,0")</div>
        <div><b>Tổng tiền: @Model.TongTien.ToString("#,0")</b></div>
        <div>HT thanh toán: @Model.HinhThucThanhToan</div>

        <div>Trạng thái: <b>@Model.TrangThai</b></div>
    </div>
    <hr />
    <div class="small fst-italic">Cảm ơn Quý khách!</div>
</body>
</html>