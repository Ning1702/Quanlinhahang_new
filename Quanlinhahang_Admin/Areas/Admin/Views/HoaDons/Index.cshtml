@model IEnumerable<Quanlinhahang_Admin.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">
    <!-- Thanh tiêu đề + Bộ lọc + Nút quay lại -->
    <div class="d-flex justify-content-between align-items-start mb-4 flex-wrap">

        <!-- Nút quay lại -->
        <a asp-area="Admin" asp-controller="Home" asp-action="Index"
           class="btn btn-green mb-2">
            <i class="fa-solid fa-arrow-left"></i> Quay lại trang quản trị
        </a>

        <!-- Tiêu đề -->
        <div class="text-center flex-grow-1 mb-2">
            <h2 class="fw-bold mb-3">Danh sách hóa đơn</h2>
        </div>

        <!-- Bộ lọc -->
        <form method="get" asp-action="Index" class="d-flex align-items-center mb-2">

            <select name="status" class="form-select me-2"
                    style="width:220px;border-radius:8px;">
                <option value="">-- Tất cả trạng thái --</option>
                <option value="Đã thanh toán"
                        selected="@(ViewBag.Status == "Đã thanh toán")">
                    Đã thanh toán
                </option>
                <option value="Chưa thanh toán"
                        selected="@(ViewBag.Status == "Chưa thanh toán")">
                    Chưa thanh toán
                </option>
            </select>

            <button type="submit" class="btn btn-secondary me-2" style="border-radius:8px;">
                <i class="fa fa-filter"></i> Lọc
            </button>

            <a asp-action="Index" class="btn btn-showall fw-semibold">
                <i class="fa-solid fa-list"></i> Hiện tất cả
            </a>
        </form>
    </div>

    <!-- Bảng danh sách hóa đơn -->
    <table class="table table-bordered table-striped text-center align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Khách hàng</th>
                <th>Ngày lập</th>
                <th>Tổng tiền</th>
                <th>VAT</th>
                <th>Loại dịch vụ</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-muted">Không có hóa đơn để hiển thị.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoaDonID</td>
                        <td>@item.DatBan?.KhachHang?.HoTen</td>
                        <td>@item.NgayLap.ToString("dd/MM/yyyy")</td>
                        <td>@string.Format("{0:N0} đ", item.TongTien)</td>
                        <td>@(item.VAT?.ToString() ?? "-")</td>
                        <td>@(item.LoaiDichVu ?? "-")</td>
                        <td>@item.TrangThaiThanhToan</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.HoaDonID"
                               class="btn btn-info btn-sm fw-semibold">
                                VAT/DV
                            </a>

                            <form asp-action="MarkPaid" asp-route-id="@item.HoaDonID"
                                  method="post" style="display:inline">
                                <button class="btn btn-success btn-sm fw-semibold">Đã thanh toán</button>
                            </form>

                            <form asp-action="MarkUnpaid" asp-route-id="@item.HoaDonID"
                                  method="post" style="display:inline">
                                <button class="btn btn-secondary btn-sm fw-semibold">Chưa</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- CSS -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        background: #fff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.08);
        max-width: 1300px;
    }

    h2 {
        font-size: 28px;
        color: #333;
        margin-bottom: 10px;
    }

    .btn-green {
        background-color: #28a745;
        color: white;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 8px;
        transition: 0.3s;
        border: none;
    }

        .btn-green:hover {
            background-color: #218838;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 3px 8px rgba(33,136,56,0.3);
        }

    .btn-showall {
        background-color: #0d6efd;
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-showall:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
            box-shadow: 0 3px 8px rgba(13,110,253,0.3);
        }
</style>
