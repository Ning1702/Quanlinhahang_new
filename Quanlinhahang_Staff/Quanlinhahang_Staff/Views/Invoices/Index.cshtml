@model IEnumerable<Quanlinhahang_Staff.Models.ViewModels.InvoiceRowVM>
@using Quanlinhahang_Staff.Models.ViewModels

@{
    int currentStatus = ViewBag.Status;
    var filter = ViewBag.Filter as InvoiceFilterVM;

    string highlightId = Context.Request.Query["highlight"];
}

<h2 class="mt-3">Danh sách hóa đơn</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 0 ? "active" : "")"
           asp-action="Index" asp-route-status="0">Tất cả</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 1 ? "active" : "")"
           asp-action="Index" asp-route-status="1">Chờ xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 2 ? "active" : "")"
           asp-action="Index" asp-route-status="2">Đã xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 3 ? "active" : "")"
           asp-action="Index" asp-route-status="3">Đang phục vụ</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 4 ? "active" : "")"
           asp-action="Index" asp-route-status="4">Đã thanh toán</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == 5 ? "active" : "")"
           asp-action="Index" asp-route-status="5">Đã hủy</a>
    </li>
</ul>

<form asp-action="Index" method="get" class="mb-3">
    <input type="hidden" name="status" value="@currentStatus" />

    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="Search" class="form-control"
                   placeholder="Tìm khách hàng, SĐT..."
                   value="@filter?.Search" />
        </div>

        <div class="col-md-3">
            <input type="date" name="From" class="form-control"
                   value="@(filter?.From?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="col-md-3">
            <input type="date" name="To" class="form-control"
                   value="@(filter?.To?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Ngày lập</th>
            <th>Khách hàng</th>
            <th>SĐT</th>
            <th>Bàn/Phòng</th>
            <th class="text-end">Tổng tiền</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            bool isHighlight = (highlightId == x.HoaDonID.ToString());

            <tr id="invoice-row-@x.HoaDonID" class="@(isHighlight ? "highlight-row" : "")">
                <td>@x.HoaDonID</td>
                <td>@x.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@x.KhachHang</td>
                <td>@x.SoDienThoai</td>
                <td>@($"{x.BanPhong} ({x.LoaiBanPhong})")</td>
                <td class="text-end">@x.ThanhTien.ToString("#,##0")</td>

                <td>
                    @switch (x.TrangThaiID)
                    {
                        case 1:
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                            ;
                            break;
                        case 2:
                            <span class="badge bg-primary">Đã xác nhận</span>
                            ;
                            break;
                        case 3:
                            <span class="badge bg-info">Đang phục vụ</span>
                            ;
                            break;
                        case 4:
                            <span class="badge bg-success">Đã thanh toán</span>
                            ;
                            break;
                        case 5:
                            <span class="badge bg-secondary">Đã hủy</span>
                            ;
                            break;
                    }
                </td>

                <td class="text-center">
                    @if (currentStatus == 0)
                    {
                        <a class="btn btn-sm btn-primary"
                           href="@Url.Action("GoManage", "Invoices", new { id = x.HoaDonID })">
                            Quản lý
                        </a>
                    }
                    else
                    {
                        @if (x.TrangThaiID == 4)
                        {
                            <a asp-action="Details"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-info me-1">
                                Xem
                            </a>

                            <a asp-action="Print"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-secondary">
                                In
                            </a>
                        }
                        else if (x.TrangThaiID == 2)
                        {
                            <form class="d-inline confirm-action" method="post" asp-action="StartServing" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-primary me-1">Phục vụ</button>
                            </form>

                            <a asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-warning me-1">
                                Chi tiết
                            </a>

                            <form class="d-inline confirm-action" method="post" asp-action="HuyHoaDon" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }
                        else if (x.TrangThaiID == 3)
                        {
                            <form class="d-inline confirm-action" method="post" asp-action="ThanhToan" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-success me-1">Thanh toán</button>
                            </form>

                            <a asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-warning me-1">
                                Chi tiết
                            </a>

                            <form class="d-inline confirm-action" method="post" asp-action="HuyHoaDon" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }
                        else if (x.TrangThaiID == 5)
                        {
                            <a asp-action="Details"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-info">Xem</a>
                        }
                        else
                        {
                            <a asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               asp-route-status="@currentStatus"
                               class="btn btn-sm btn-warning me-1">
                                Chi tiết
                            </a>

                            <form class="d-inline confirm-action" method="post" asp-action="ConfirmInvoice" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-success me-1">Xác nhận</button>
                            </form>

                            <form class="d-inline confirm-action" method="post" asp-action="HuyHoaDon" asp-route-id="@x.HoaDonID">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .highlight-row {
        background-color: #fff3cd !important;
        transition: background-color 1s ease-in-out;
    }

    .fade-out {
        background-color: transparent !important;
    }
</style>

@section Scripts {

    <!-- Highlight Fade -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const row = document.querySelector(".highlight-row");
            if (row) {
                setTimeout(() => row.classList.add("fade-out"), 3000);
            }
        });
    </script>

    <!-- SWEETALERT XÁC NHẬN HÀNH ĐỘNG -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            document.querySelectorAll(".confirm-action").forEach(form => {

                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    let btn = form.querySelector("button");
                    let action = btn.textContent.trim();

                    let title = "";
                    let text = "";
                    let icon = "warning"; // mặc định

                    switch (action) {
                        case "Xác nhận":
                            title = "Xác nhận hóa đơn?";
                            text = "Bạn có chắc chắn muốn xác nhận hóa đơn này?";
                            icon = "question";
                            break;

                        case "Phục vụ":
                            title = "Phục vụ hóa đơn?";
                            text = "Bạn có chắc chắn muốn phục vụ hóa đơn này?";
                            icon = "question";
                            break;

                        case "Thanh toán":
                            title = "Thanh toán hóa đơn?";
                            text = "Bạn có chắc chắn muốn thanh toán hóa đơn này?";
                            icon = "question";
                            break;

                        case "Hủy":
                            title = "Hủy hóa đơn?";
                            text = "Bạn sẽ không thể khôi phục lại hóa đơn đã hủy?";
                            icon = "error";   // ❌ icon đỏ
                            break;

                        default:
                            title = "Xác nhận thao tác";
                            text = "Bạn có chắc chắn muốn thực hiện hành động này?";
                            icon = "warning";
                            break;
                    }

                    Swal.fire({
                        icon: icon,
                        title: title,
                        text: text,
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Đồng ý',
                        cancelButtonText: 'Hủy'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });

                });

            });

        });
    </script>


}
