@{
    ViewData["Title"] = "Tạo Hóa Đơn Offline";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOffline" method="post">
    <div class="form-group">
        <label>Tổng tiền</label>
        <input type="number" step="1000" name="tongTien" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Hình thức thanh toán</label>
        <select name="hinhThuc" class="form-control">
            <option>Tiền mặt</option>
            <option>Thẻ</option>
            <option>QR</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Tạo hóa đơn</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}
